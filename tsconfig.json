{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "rootDir":"./src",
    "outDir":"./lib",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
